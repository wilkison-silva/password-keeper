<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple">

    <TextView
        android:id="@+id/textViewHello"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/inter_light"
        android:text="@string/hello"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_bold"
        android:textSize="24sp"
        tools:text="Francis!"
        android:textFontWeight="700"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewHello"/>

    <TextView
        android:id="@+id/textViewAdviceOfMoment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/advice_of_moment"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewHello"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_bold"
        android:textStyle="italic"
        android:text="@string/message"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdviceOfMoment"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputSearch"
        app:hintEnabled="false"
        app:endIconMode="clear_text"
        style="@style/InputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="35dp"
        android:background="@color/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMessage">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputSearchIcon"
            style="@style/TextInputEditText"
            android:imeOptions="actionSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/imageViewSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search"
        android:background="@color/white"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textInputSearch"
        app:layout_constraintStart_toStartOf="@+id/textInputSearch"
        app:layout_constraintTop_toTopOf="@+id/textInputSearch"
        android:contentDescription="@string/cone_de_pesquisa" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintFavorite"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:background="@drawable/background_rounded_tops"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/textViewFavorite"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/favorite"
        android:fontFamily="@font/inter_bold"
        android:textFontWeight="700"
        android:textColor="@color/purple"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ConstraintFavorite"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/image_recycleview"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewFavorite"
        tools:listitem="@layout/item_image_favorite"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <TextView
        android:id="@+id/textViewTypes"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/types"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/purple"
        android:textSize="20sp"
        android:textFontWeight="700"
        android:layout_marginTop="32dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_recycleview" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTypes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTypes"
        tools:listitem="@layout/item_image_types"/>

</androidx.constraintlayout.widget.ConstraintLayout>