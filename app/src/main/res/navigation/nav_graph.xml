<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="br.com.passwordkeeper.presentation.ui.fragment.SignInFragment"
        android:label="LoginFragment"
        tools:layout="@layout/login_fragment">
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_signInFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="br.com.passwordkeeper.presentation.ui.fragment.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/sign_up_fragment">
        <action
            android:id="@+id/action_signUpFragment_to_signUpCongratsFragment2"
            app:destination="@id/signUpCongratsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpCongratsFragment"
        android:name="br.com.passwordkeeper.presentation.ui.fragment.SignUpCongratsFragment"
        android:label="SignUpCongratsFragment"
        tools:layout="@layout/sign_up_congrats_fragment"/>
    <fragment
        android:id="@+id/homeFragment"
        android:name="br.com.passwordkeeper.presentation.ui.fragment.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_homeFragment_to_formCardFragment"
            app:destination="@id/formCardFragment" />
        <action
            android:id="@+id/action_homeFragment_to_allCategoriesFragment"
            app:destination="@id/allCategoriesFragment"
            app:popUpTo="@id/homeFragment" />

    </fragment>
    <fragment
        android:id="@+id/formCardFragment"
        android:name="br.com.passwordkeeper.presentation.ui.fragment.CreateNewCardFragment"
        android:label="FormCardFragment"
        tools:layout="@layout/create_new_card_fragment">
        <action
            android:id="@+id/action_formCardFragment_to_newNoteSuccessFragment"
            app:destination="@id/newNoteSuccessFragment"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_formCardFragment_to_newNoteErrorFragment"
            app:destination="@id/newNoteErrorFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/allCategoriesFragment"
        android:name="br.com.passwordkeeper.presentation.ui.fragment.AllCategoriesFragment"
        android:label="AllCategoriesFragment"
        tools:layout="@layout/all_categories_fragment" >
        <argument
            android:name="email"
            app:argType="string" />

    </fragment>
    <fragment
        android:id="@+id/newNoteSuccessFragment"
        android:name="br.com.passwordkeeper.presentation.ui.fragment.NewNoteSuccessFragment"
        android:label="NewNoteSuccessFragment"
        tools:layout="@layout/new_note_success" />
    <fragment
        android:id="@+id/newNoteErrorFragment"
        android:name="br.com.passwordkeeper.presentation.ui.fragment.NewNoteErrorFragment"
        android:label="NewNoteErrorFragment"
        tools:layout="@layout/new_note_error" />
</navigation>